{
  "workspace": [
    "src/core",
    "src/dsl",
    "src/cli",
    "src/adapters"
  ],
  "tasks": {
    "dev": "deno run --watch mod.ts",
    "test": "deno test --allow-net --allow-read --allow-write",
    "check": "deno check **/*.ts",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "validate": "deno task fmt && deno task check && deno task lint && deno task test",
    "craft": "deno -A src/cli/mod.ts"
  },
  "fmt": {
    "include": ["./**/*.ts"],
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": false,
    "proseWrap": "always"
  },
  "lint": {
    "include": ["./**/*.ts"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.10",
    "@std/testing": "jsr:@std/testing@^1.0.9",
    "@std/log": "jsr:@std/log@^0.224.12"
  },
  "compilerOptions": {
    "lib": ["deno.window"]
  }
}
