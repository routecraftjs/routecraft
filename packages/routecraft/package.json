{
  "name": "@routecraft/routecraft",
  "version": "0.1.0",
  "description": "Type-safe integration and automation framework for TypeScript/Node.js",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@standard-schema/spec": "^1.0.0",
    "pino": "^10.1.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  },
  "devDependencies": {
    "arktype": "^2.1.23",
    "pino-pretty": "^13.1.2"
  },
  "repository": "https://github.com/routecraftjs/routecraft",
  "keywords": [
    "integration",
    "automation",
    "routes",
    "dsl",
    "typescript",
    "camel",
    "data-processing",
    "workflow",
    "middleware"
  ],
  "author": "routecraftjs",
  "license": "Apache-2.0",
  "homepage": "https://routecraft.dev",
  "bugs": "https://github.com/routecraftjs/routecraft/issues"
}
