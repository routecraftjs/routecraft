{
  "name": "routecraft",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/mod.js",
  "types": "./dist/mod.d.ts",
  "exports": {
    ".": {
      "types": "./dist/mod.d.ts",
      "import": "./dist/mod.js",
      "require": "./dist/mod.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/mod.ts --format esm --dts",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@routecraft/adapters": "workspace:*",
    "@routecraft/core": "workspace:*",
    "@routecraft/dsl": "workspace:*"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com/"
  },
  "devDependencies": {
    "arktype": "^2.0.4"
  }
}
