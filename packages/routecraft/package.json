{
  "name": "@routecraftjs/routecraft",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@standard-schema/spec": "^1.0.0",
    "pino": "^9.12.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  },
  "devDependencies": {
    "arktype": "^2.1.22",
    "pino-pretty": "^13.1.1"
  },
  "repository": "https://github.com/devoptix-labs/routecraft"
}
