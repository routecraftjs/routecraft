{
  "name": "@routecraft/cli",
  "version": "0.1.0",
  "description": "CLI for running RouteCraft routes",
  "private": false,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@routecraft/routecraft": "workspace:^0.1.0",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": "https://github.com/routecraftjs/routecraft",
  "bin": {
    "craft": "./dist/index.js"
  },
  "keywords": [
    "routecraft",
    "cli",
    "routes",
    "automation",
    "typescript"
  ],
  "author": "routecraftjs",
  "license": "Apache-2.0",
  "homepage": "https://routecraft.dev"
}
