{
  "name": "@routecraftjs/workspace",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format:write": "prettier --write . --ignore-unknown",
    "format": "prettier --check . --ignore-unknown",
    "test": "vitest --run",
    "test:coverage": "vitest --run --coverage",
    "limit:size": "size-limit",
    "prepare": "husky",
    "build": "pnpm -r run build",
    "publish:all": "pnpm run build && pnpm -r publish --no-git-checks",
    "pack:all": "pnpm run build && rm -rf dist && mkdir dist && pnpm -r exec pnpm pack --pack-destination ../../dist",
    "craft": "node packages/cli/dist/index.js",
    "docs": "pnpm --filter routecraft.dev dev",
    "all": " pnpm lint --fix && pnpm format:write && pnpm typecheck && pnpm build && pnpm test"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@size-limit/time": "^11.2.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/coverage-v8": "^3.2.4",
    "comment-parser": "^1.4.1",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "madge": "^8.0.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "size-limit": "^11.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "size-limit": [
    {
      "path": [
        "packages/routecraft/dist/index.js"
      ],
      "limit": "10 kb",
      "running": false,
      "ignore": [
        "node:*"
      ]
    }
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs,mjs,cts,mts}": [
      "prettier --write --ignore-unknown",
      "eslint --fix"
    ],
    "*.{md,mdx,json,yml,yaml}": [
      "prettier --write --ignore-unknown"
    ],
    "*.{css,scss,less,html,svg}": [
      "prettier --write --ignore-unknown"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": "https://github.com/devoptix-labs/routecraft",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  },
  "dependencies": {
    "chokidar": "^4.0.3"
  }
}
