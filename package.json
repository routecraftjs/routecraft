{
  "name": "@routecraft/workspace",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format:write": "prettier --write . --ignore-unknown",
    "format": "prettier --check . --ignore-unknown",
    "test": "vitest --run",
    "test:coverage": "vitest --run --coverage",
    "limit:size": "size-limit",
    "prepare": "husky",
    "build": "pnpm -r run build",
    "version:set": "node .github/scripts/set-version.mjs",
    "publish:all": "pnpm run build && pnpm -r publish --no-git-checks",
    "pack:all": "pnpm run build && rm -rf dist && mkdir dist && pnpm -r exec pnpm pack --pack-destination ../../dist",
    "craft": "node packages/cli/dist/index.js",
    "docs": "pnpm --filter routecraft.dev dev",
    "all": " pnpm lint --fix && pnpm format:write && pnpm typecheck && pnpm build && pnpm test"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@size-limit/preset-small-lib": "^12.0.0",
    "@size-limit/time": "^12.0.0",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitest/coverage-v8": "^4.0.17",
    "comment-parser": "^1.4.4",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "10.1.8",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "madge": "^8.0.0",
    "prettier": "^3.8.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "size-limit": "^12.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite-tsconfig-paths": "^6.0.4",
    "vitest": "^4.0.17"
  },
  "size-limit": [
    {
      "path": [
        "packages/routecraft/dist/index.js"
      ],
      "limit": "10 kb",
      "running": false,
      "ignore": [
        "node:*"
      ]
    }
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs,mjs,cts,mts}": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ],
    "*.{md,mdx,json,yml,yaml}": [
      "prettier --write --ignore-unknown"
    ],
    "*.{css,scss,less,html,svg}": [
      "prettier --write --ignore-unknown"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": "https://github.com/routecraftjs/routecraft",
  "dependencies": {
    "chokidar": "^5.0.0"
  }
}
